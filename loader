local UserInputService = game:GetService("UserInputService")

print("=== Device Detection ===")
print("TouchEnabled: " .. tostring(UserInputService.TouchEnabled))
print("KeyboardEnabled: " .. tostring(UserInputService.KeyboardEnabled))
print("MouseEnabled: " .. tostring(UserInputService.MouseEnabled))

if UserInputService.TouchEnabled then
    print("Loading MOBILE version...")
    loadstring(game:HttpGet("https://raw.githubusercontent.com/saymonbruh123/Saymon/main/isaacsMinesweeperMb"))()
else
    print("Loading PC version...")
    loadstring(game:HttpGet("https://raw.githubusercontent.com/saymonbruh123/Saymon/main/isaacsMinesweeper"))()
end
